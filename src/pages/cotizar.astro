              </div>
              <div>
                <label class="block text-sm font-bold text-slate-700 mb-2">Tel茅fono</label>
                <input type="tel" name="phone" required class="w-full px-4 py-3 rounded-lg border border-slate-300 focus:border-emerald-500 outline-none" placeholder="+56 9 ...">
              </div>
            </div>

            <div class="grid md:grid-cols-2 gap-6">
               <div>
                <label class="block text-sm font-bold text-slate-700 mb-2">Comuna</label>
                <ComunaSelect selectedSlug={selectedComuna} />
                <!-- ComunaSelect uses name="comuna" inside -->
              </div>
              <div>
                <label class="block text-sm font-bold text-slate-700 mb-2">Servicio</label>
                <ServiceSelect segment="hogar" selectedSlug={selectedServicio} />
                 <!-- ServiceSelect uses name="servicio" inside -->
              </div>
            </div>

            <div>
              <label class="block text-sm font-bold text-slate-700 mb-2">Mensaje</label>
              <textarea name="message" rows="3" class="w-full px-4 py-3 rounded-lg border border-slate-300 focus:border-emerald-500 outline-none" placeholder="Describa brevemente su problema..."></textarea>
            </div>

            <button type="submit" class="w-full bg-emerald-600 hover:bg-emerald-700 text-white font-bold py-4 rounded-lg shadow-lg transition-transform hover:-translate-y-0.5" data-gtm="form_submit_hogar">
              Solicitar Visita
            </button>
          </form>
        </div>

        <!-- Form Empresa -->
        <div id="form-empresa" class="p-8 md:p-12 transition-opacity duration-300 absolute inset-0 w-full opacity-0 pointer-events-none overflow-y-auto">
          <div class="text-center mb-8">
            <h2 class="text-2xl font-bold text-slate-900 text-blue-600">Cotizaci贸n Industrial</h2>
            <p class="text-slate-500 text-sm mt-1">Proyectos el茅ctricos, mantenci贸n y montajes.</p>
          </div>

          <form action="/api/leads" method="POST" class="space-y-6" id="form-empresa-el">
             <input type="hidden" name="utm_source" id="empresa_utm_source">
