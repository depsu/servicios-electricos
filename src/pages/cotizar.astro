---
import Layout from '../layouts/Layout.astro';
import TrustBar from '../components/TrustBar.astro';
import ComunaSelect from '../components/ComunaSelect.astro';
import ServiceSelect from '../components/ServiceSelect.astro';

// Helper for query params
const { searchParams } = Astro.url;
let initialType = searchParams.get('tipo') || 'hogar';
const selectedComuna = searchParams.get('comuna') || '';
const selectedServicio = searchParams.get('servicio') || '';

// Force 'empresa' type if the pre-selected service is industrial
import { services } from '../data/servicios';
if (selectedServicio) {
    const serviceData = services.find(s => s.slug === selectedServicio);
    if (serviceData && serviceData.segment === 'industrial') {
        initialType = 'empresa';
    }
}
---

<Layout title="Cotizar Proyecto o Servicio | Servicios El茅ctricos RM">
  <div class="bg-slate-900 py-12 text-center text-white gradient-bg">
    <h1 class="text-4xl font-bold mb-4">Cotizaci贸n en L铆nea</h1>
    <p class="text-slate-300 max-w-2xl mx-auto">
      Complete el formulario para recibir una evaluaci贸n r谩pida y profesional.
    </p>
  </div>

  <section class="py-12 bg-slate-50 relative">
    <div class="container mx-auto px-4 max-w-4xl">
      
      <!-- Toggle Buttons -->
      <div class="flex justify-center mb-12">
        <div class="bg-white p-1 rounded-xl shadow-sm inline-flex">
          <button 
            id="btn-hogar"
            class="px-8 py-3 rounded-lg text-sm font-bold transition-all duration-300 flex items-center gap-2"
          >
             Hogar / Condominio
          </button>
          <button 
            id="btn-empresa"
            class="px-8 py-3 rounded-lg text-sm font-bold transition-all duration-300 flex items-center gap-2"
          >
             Empresa / Industria
          </button>
        </div>
      </div>

      <!-- Forms Container -->
      <div class="bg-white rounded-2xl shadow-xl overflow-hidden relative min-h-[600px]">
        
        <!-- Form Hogar -->
        <div id="form-hogar" class="p-8 md:p-12 transition-opacity duration-300 absolute inset-0 w-full overflow-y-auto">
          <div class="text-center mb-8">
            <h2 class="text-2xl font-bold text-slate-900 text-emerald-600">Servicio Residencial</h2>
            <p class="text-slate-500 text-sm mt-1">Visitas t茅cnicas, reparaciones y empalmes rurales.</p>
          </div>

          <form action="/api/leads" method="POST" class="space-y-6" id="form-hogar-el">
            <input type="hidden" name="utm_source" id="hogar_utm_source">
            <input type="hidden" name="utm_medium" id="hogar_utm_medium">
