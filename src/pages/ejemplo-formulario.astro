---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import QuickForm from '../components/QuickForm.astro';
import FeatureSection from '../components/FeatureSection.astro';
---

<Layout title="Ejemplo con Formulario | Nombre Empresa">
    <Hero 
        title="Ejemplo con <br><span class='text-blue-400'>Formulario Rápido</span>"
        subtitle="Este Hero muestra el formulario compacto en lugar del estado del servicio."
        bgImage="https://images.unsplash.com/photo-1557804506-669a67965ba0?q=80&w=2074&auto=format&fit=crop"
        badgeText="Demo Formulario"
        showQuickForm={true}
        showStatus={false}
    />

    <section class="py-20 bg-white">
        <div class="container mx-auto px-4">
            <h2 class="text-3xl font-bold text-center text-slate-900 mb-12">Formulario también en el contenido</h2>
            
            <div class="grid md:grid-cols-2 gap-12 items-start">
                <div>
                    <h3 class="text-2xl font-bold text-slate-900 mb-4">Versión Clara</h3>
                    <p class="text-slate-600 mb-6">Ideal para fondos claros o secciones con fondo blanco.</p>
                    <QuickForm 
                        title="Solicita Información"
                        buttonText="Enviar"
                        variant="light"
                    />
                </div>

                <div class="bg-slate-900 p-8 rounded-2xl">
                    <h3 class="text-2xl font-bold text-white mb-4">Versión Oscura</h3>
                    <p class="text-slate-300 mb-6">Ideal para fondos oscuros o secciones con gradientes.</p>
                    <QuickForm 
                        title="Cotiza tu Proyecto"
                        buttonText="Solicitar"
                        variant="dark"
                    />
                </div>
            </div>
        </div>
    </section>

    <FeatureSection 
        title="Usa el formulario en cualquier parte"
        subtitle="El componente QuickForm es flexible y se adapta a cualquier diseño."
        image="https://images.unsplash.com/photo-1552664730-d307ca884978?q=80&w=2070&auto=format&fit=crop"
    >
        <QuickForm 
            title="¿Necesitas ayuda?"
            buttonText="Contactar"
            variant="light"
        />
    </FeatureSection>
</Layout>
