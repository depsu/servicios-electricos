---
interface Props {
    title: string;
    description: string;
    publishDate: Date;
    image?: string;
    url: string;
}

const { title, description, publishDate, image, url } = Astro.props;
---

<article class="bg-white rounded-2xl shadow-sm border border-slate-100 overflow-hidden hover:shadow-md transition-all duration-300 group h-full flex flex-col">
    {image && (
        <a href={url} class="block relative h-48 overflow-hidden">
            <img 
                src={image} 
                alt={title} 
                class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-500"
            />
        </a>
    )}
    
    <div class="p-6 flex-1 flex flex-col">
        <div class="text-xs text-slate-500 mb-2 font-medium uppercase tracking-wide">
            {publishDate.toLocaleDateString('es-CL', { year: 'numeric', month: 'long', day: 'numeric' })}
        </div>
        
        <h3 class="text-xl font-bold text-slate-900 mb-3 leading-tight group-hover:text-blue-600 transition-colors">
            <a href={url}>{title}</a>
        </h3>
        
        <p class="text-slate-600 text-sm leading-relaxed mb-4 flex-1">
            {description}
        </p>
        
        <a href={url} class="inline-flex items-center text-blue-600 font-bold text-sm hover:underline mt-auto">
            Leer art√≠culo <i class="fa-solid fa-arrow-right ml-2 text-xs"></i>
        </a>
    </div>
</article>
