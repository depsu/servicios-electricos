            <div>
              <h3 class="font-bold text-slate-900">{item}</h3>
              <p class="text-xs text-blue-600 font-semibold uppercase mt-1">Industrial</p>
            </div>
          </div>
        ))}
        
        <!-- Hogar Items -->
        {['Empalmes Rurales', 'Gasfiter√≠a', 'Pintura Fachadas', 'Urgencias 24/7'].map(item => (
