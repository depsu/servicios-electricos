---
import Layout from '../../layouts/Layout.astro';
import BlogCard from '../../components/blog/BlogCard.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

const title = "Blog y Consejos | Nombre Empresa";
const description = "Artículos y guías prácticas sobre nuestros servicios.";
---

<Layout title={title} regionText="Blog">
    <section class="pt-32 pb-12 bg-slate-900 text-white text-center">
        <div class="container mx-auto px-4">
            <h1 class="text-4xl md:text-5xl font-bold mb-4">Blog y Novedades</h1>
            <p class="text-slate-300 text-lg max-w-2xl mx-auto">{description}</p>
        </div>
    </section>

    <section class="py-16 bg-slate-50">
        <div class="container mx-auto px-4">
            <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
                {posts.map((post) => (
                    <BlogCard 
                        title={post.data.title}
                        description={post.data.description}
                        publishDate={post.data.pubDate}
                        image={post.data.image}
                        url={`/blog/${post.slug}`}
                    />
                ))}
            </div>
        </div>
    </section>
</Layout>
