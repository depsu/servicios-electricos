            <button type="submit" class="w-full bg-blue-600 hover:bg-blue-700 text-white font-bold py-4 rounded-lg shadow-lg transition-transform hover:-translate-y-0.5" data-gtm="form_submit_industrial">
              Enviar Requerimiento
            </button>
          </form>
        </div>

      </div>
    </div>
  </section>
  
  <TrustBar />
</Layout>

<script define:vars={{ initialType }}>
  // --- UTM & Tracking Logic ---
  function getParams() {
    const params = new URLSearchParams(window.location.search);
    return {
      utm_source: params.get('utm_source') || localStorage.getItem('utm_source') || '',
      utm_medium: params.get('utm_medium') || localStorage.getItem('utm_medium') || '',
      utm_campaign: params.get('utm_campaign') || localStorage.getItem('utm_campaign') || '',
      gclid: params.get('gclid') || localStorage.getItem('gclid') || ''
    };
  }

  // Persist UTMs
  const params = new URLSearchParams(window.location.search);
  if (params.get('utm_source')) localStorage.setItem('utm_source', params.get('utm_source'));
  if (params.get('gclid')) localStorage.setItem('gclid', params.get('gclid'));

  // Populate Hidden Fields
  const trackData = getParams();
  ['hogar', 'empresa'].forEach(formType => {
    const fields = ['utm_source', 'utm_medium', 'utm_campaign', 'gclid'];
    fields.forEach(field => {
       const el = document.getElementById(`${formType}_${field}`);
       if(el) el.value = trackData[field];
    });
  });

  // --- Form Submission Handler ---
  function handleFormSubmit(e, type) {
    e.preventDefault();
    const form = e.target;
    const btn = form.querySelector('button');
    const originalText = btn.innerText;
    
    // Loading State
    btn.disabled = true;
    btn.innerText = 'Enviando...';

    // Tracking Event (GTM)
    window.dataLayer = window.dataLayer || [];
    window.dataLayer.push({
      event: `form_submit_${type}`,
      formLocation: 'cotizar_page'
    });

    const formData = new FormData(form);

    fetch(form.action, {
      method: form.method,
      body: formData
    })
    .then(response => {
      if (response.ok) {
        window.location.href = `/gracias?type=${type}`;
      } else {
        alert('Hubo un error al enviar. Por favor intente nuevamente.');
        btn.disabled = false;
        btn.innerText = originalText;
      }
    })
    .catch(err => {
      console.error(err);
      alert('Error de conexi贸n.');
      btn.disabled = false;
      btn.innerText = originalText;
    });
  }

  document.getElementById('form-hogar-el').addEventListener('submit', (e) => handleFormSubmit(e, 'b2c'));
  document.getElementById('form-empresa-el').addEventListener('submit', (e) => handleFormSubmit(e, 'b2b'));

  // --- Toggle Logic ---
  const btnHogar = document.getElementById('btn-hogar');
  const btnEmpresa = document.getElementById('btn-empresa');
  const formHogarDiv = document.getElementById('form-hogar');
  const formEmpresaDiv = document.getElementById('form-empresa');

  function setType(type) {
    if (type === 'hogar') {
      // Styles for active Hogar
      btnHogar.classList.add('bg-emerald-100', 'text-emerald-700');
      btnHogar.classList.remove('text-slate-500', 'hover:bg-slate-50');
      btnEmpresa.classList.remove('bg-blue-100', 'text-blue-700');
      btnEmpresa.classList.add('text-slate-500', 'hover:bg-slate-50');

      // Form visibility
      formHogarDiv.classList.remove('opacity-0', 'pointer-events-none');
      formHogarDiv.classList.add('opacity-100', 'relative');
      formEmpresaDiv.classList.add('opacity-0', 'pointer-events-none');
      formEmpresaDiv.classList.remove('opacity-100', 'relative');
    } else {
      // Styles for active Empresa
      btnEmpresa.classList.add('bg-blue-100', 'text-blue-700');
      btnEmpresa.classList.remove('text-slate-500', 'hover:bg-slate-50');
      btnHogar.classList.remove('bg-emerald-100', 'text-emerald-700');
      btnHogar.classList.add('text-slate-500', 'hover:bg-slate-50');

       // Form visibility
      formEmpresaDiv.classList.remove('opacity-0', 'pointer-events-none');
      formEmpresaDiv.classList.add('opacity-100', 'relative');
      formHogarDiv.classList.add('opacity-0', 'pointer-events-none');
      formHogarDiv.classList.remove('opacity-100', 'relative');
    }
  }

  // Initial state
  setType(initialType);

  // Event Listeners
  btnHogar.addEventListener('click', () => setType('hogar'));
  btnEmpresa.addEventListener('click', () => setType('empresa'));
</script>

