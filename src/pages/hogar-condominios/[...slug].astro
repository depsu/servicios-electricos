---
import ServiceLanding from '../../components/ServiceLanding.astro';
import { services } from '../../data/servicios';

export async function getStaticPaths() {
  const homeServices = services.filter(s => s.segment === 'hogar');
  return homeServices.map(service => ({
    params: { slug: service.slug },
    props: { service },
  }));
}

const { service } = Astro.props;
---

<ServiceLanding {...service} intro={service.description} />
