---
import Layout from '../layouts/Layout.astro';
import TrustBar from '../components/TrustBar.astro';
import ProjectsGrid from '../components/ProjectsGrid.astro';
import CallToAction from '../components/CallToAction.astro';
import { comunas } from '../data/comunas';

// Filter top coverage areas
const topIndustrial = comunas.filter(c => c.type === 'industrial').slice(0, 3);
const topRural = comunas.filter(c => c.type === 'premium' || c.type === 'rural').slice(0, 3);
