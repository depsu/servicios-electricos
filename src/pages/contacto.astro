---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import ContactForm from '../components/ContactForm.astro';
---

<Layout title="Contacto | Nombre Empresa" regionText="Contacto">
    <Hero 
        title="Estamos aquí para <br><span class='text-blue-400'>Ayudarte</span>"
        subtitle="Completa el formulario o llámanos directamente. Respondemos en minutos."
        bgImage="https://images.unsplash.com/photo-1423666639041-f56000c27a9a?q=80&w=2074&auto=format&fit=crop"
        badgeText="Contáctanos"
        showStatus={false}
    />

    <ContactForm />

    <!-- Información de Contacto -->
    <section class="py-20 bg-slate-50">
        <div class="container mx-auto px-4">
            <h2 class="text-3xl font-bold text-center text-slate-900 mb-12">Otras formas de contactarnos</h2>
            
            <div class="grid md:grid-cols-3 gap-8 max-w-4xl mx-auto">
                <div class="bg-white p-8 rounded-2xl shadow-sm border border-slate-200 text-center hover:shadow-md transition">
                    <div class="w-14 h-14 bg-blue-100 text-blue-600 rounded-full flex items-center justify-center text-2xl mb-4 mx-auto">
                        <i class="fa-solid fa-phone"></i>
                    </div>
                    <h3 class="font-bold text-slate-900 mb-2">Teléfono</h3>
                    <a href="tel:+56912345678" class="text-blue-600 hover:underline">+56 9 1234 5678</a>
                    <p class="text-sm text-slate-500 mt-2">Lun - Dom: 24/7</p>
                </div>

                <div class="bg-white p-8 rounded-2xl shadow-sm border border-slate-200 text-center hover:shadow-md transition">
                    <div class="w-14 h-14 bg-green-100 text-green-600 rounded-full flex items-center justify-center text-2xl mb-4 mx-auto">
                        <i class="fa-brands fa-whatsapp"></i>
                    </div>
                    <h3 class="font-bold text-slate-900 mb-2">WhatsApp</h3>
                    <a href="https://wa.me/56912345678" class="text-green-600 hover:underline">Enviar mensaje</a>
                    <p class="text-sm text-slate-500 mt-2">Respuesta inmediata</p>
                </div>

                <div class="bg-white p-8 rounded-2xl shadow-sm border border-slate-200 text-center hover:shadow-md transition">
                    <div class="w-14 h-14 bg-purple-100 text-purple-600 rounded-full flex items-center justify-center text-2xl mb-4 mx-auto">
                        <i class="fa-solid fa-envelope"></i>
                    </div>
                    <h3 class="font-bold text-slate-900 mb-2">Email</h3>
                    <a href="mailto:contacto@ejemplo.com" class="text-purple-600 hover:underline">contacto@ejemplo.com</a>
                    <p class="text-sm text-slate-500 mt-2">Respuesta en 24hrs</p>
                </div>
            </div>
        </div>
    </section>
</Layout>
